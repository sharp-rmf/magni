<launch>

  <param name="/use_sim_time" value="true" />

  <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find magni)/test/romio.rviz" />

  <node pkg="rosbag" type="play" name="player" args="--clock /home/jh/Data/romio/out.bag" />

  <!-- Publishes the voxel grid to rviz for display -->
  <node pkg="costmap_2d" type="costmap_2d_markers" name="voxel_visualizer">
    <remap from="voxel_grid" to="/costmap_node/costmap/voxel_layer/voxel_grid" />
  </node>

  <!-- Run the costmap node -->
  <node name="costmap_node" pkg="costmap_2d" type="costmap_2d_node" output="screen" >
    <rosparam file="$(find magni)/test/params.yaml" command="load" ns="costmap" />
  </node>

</launch>